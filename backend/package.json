{
  "name": "wealthwise-backend",
  "version": "1.0.0",
  "description": "Production-grade modular monolith backend for WealthWise financial application",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "express",
    "typescript",
    "drizzle",
    "neon",
    "clerk",
    "modular-monolith"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.49",
    "@neondatabase/serverless": "^0.9.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "drizzle-kit": "^0.24.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.4",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
